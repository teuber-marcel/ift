                "fontdict": {
                    "fontsize": 16,
                    "weight": "normal",
                    "family": "Times New Roman"
                }
            },

            "legend": {
                "loc": "lower right",
                "title": "system type",
                "title_fontsize": 12,
                "text_fontsize": 12,
                "family": "Times New Roman"
