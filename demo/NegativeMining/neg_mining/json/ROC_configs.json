{
    "ROC_GRAPHS": {
        "PubFig83": {
            "active": true,
            "plot_sem": false,

            "figure": {
                "figsize": [10, 5]
            },

            "title": {
                "label": "PubFig83",
                "fontdict": {
                    "fontsize": 16,
                    "weight": "normal",
                    "family": "Times New Roman"
                }
            },

            "grid": true,

            "xlabel": {
                "label": "false acceptance rate (%)",
